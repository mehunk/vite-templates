{
  "extends": "stylelint-config-recommended-vue",
  "overrides": [
    {
      "files": "**/*.html",
      "extends": "stylelint-config-standard",
      "customSyntax": "postcss-html"
    },
    {
      "files": "**/*.less",
      "extends": "stylelint-config-recommended-less",
      "customSyntax": "postcss-less",
      "plugins": [
        "stylelint-less"
      ]
    }
  ]
}
